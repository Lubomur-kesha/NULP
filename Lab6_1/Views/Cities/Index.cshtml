@model IEnumerable<Lab6_1.Models.cities>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-info">Cities data</h2>

<p class="float-right">
    <b class="btn btn-outline-primary">
        @Html.ActionLink("Create New", "Create")
    </b>
</p>
<table class="table table-primary">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.city_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.city)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.country)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.area_km_kv)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.city_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.country)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.area_km_kv)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.city_id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id = item.city_id }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.city_id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
